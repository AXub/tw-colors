---
import Layout from '../layouts/Layout.astro';
import ThemedCard from 'src/components/ThemedCard.astro';
---

<Layout title="tw-colors">
   <main
      class="bg-base-100 text-base-content flex flex-col items-center h-full py-12 min-h-screen transition-colors duration-500"
   >
      <div class="px-6 container max-w-sm sm:max-w-xl">
         <h1
            class="text-base-content-emphasis m-0 font-black text-[43px] leading-[1] pb-16"
         >
            Welcome to
            <span class="text-primary transition-colors duration-300">
               tw-colors
            </span>
         </h1>

         <ul class="grid sm:grid-cols-2 gap-6">
            <ThemedCard themeClass="theme-light" />
            <ThemedCard themeClass="theme-dark" />
            <ThemedCard themeClass="theme-forest" />
            <ThemedCard themeClass="theme-salmon" />
         </ul>
      </div>
   </main>
</Layout>
