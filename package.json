{
  "name": "tw-colors",
  "version": "1.0.7",
  "author": {
    "name": "Laurent Blondy",
    "email": "laurent.blondy1@gmail.com",
    "url": "https://blondy.dev/"
  },
  "description": "Tailwind plugin for switching color theme with just one className",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "color",
    "colors",
    "theme",
    "themes",
    "dark"
  ],
  "main": "dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublish": "npm run build && vitest run",
    "postpublish": "git add . && git commit -a && git tag v%npm_package_version% && git push --tags",
    "test": "npm run build && vitest",
    "demo": "npm run build && vite"
  },
  "publishConfig": {
    "access": "public",
    "branches": [
      "master"
    ]
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "devDependencies": {
    "@types/color": "^3.0.3",
    "@types/lodash.foreach": "^4.5.7",
    "@types/node": "^18.11.9",
    "prettier": "^2.7.1",
    "typescript": ">=4.0.0",
    "vite": "^4.0.4",
    "vitest": "^0.28.3"
  },
  "dependencies": {
    "autoprefixer": "^10.4.13",
    "color": "^4.2.3",
    "lodash.foreach": "^4.5.0",
    "postcss": "^8.4.21"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/L-Blondy/tw-colors"
